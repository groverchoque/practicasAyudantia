<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/text_layout">
        <include layout="@layout/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="@string/str_result"
            android:textSize="100sp"
            android:gravity="right"
            android:id="@+id/screen_result"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/str_result"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:gravity="right"
            android:id="@+id/screen_input"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:id="@+id/btn_return"
                android:text="@string/str_btn_return"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_delete"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_pow"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_sqrt"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_m_pop"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_parenthesis_l"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_parenthesis_r"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_quotient"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_7"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_8"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_9"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_product"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_4"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_5"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_6"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:text="@string/str_btn_diff"
                android:onClick="onClick"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_1"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_2"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_3"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_add"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            style="?android:attr/buttonBarStyle">
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_m_push"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_0"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_coma"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:onClick="onClick"
                android:text="@string/str_btn_equal"
                android:textSize="30sp"
                android:layout_margin="2dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>