<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1">

    <include layout="@layout/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/str_result"
        android:textSize="50sp"
        android:gravity="right"
        android:id="@+id/screen_result"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/str_result"
        android:textSize="30sp"
        android:layout_margin="2dp"
        android:gravity="right"
        android:id="@+id/screen_input"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:columnCount="5">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
            />

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_pow"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_sqrt"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_3"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_m_push"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_m_pop"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_2"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_parenthesis_l"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_parenthesis_r"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_1"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_4"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_9"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>


            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_return"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_5"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_8"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_0"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_6"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_7"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/rounded_btn_number"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_coma"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_number"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_delete"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_quotient"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_product"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1">
            <Button
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:onClick="onClick"
                android:text="@string/str_btn_diff"
                android:textSize="30sp"
                android:layout_margin="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="114dp"
                android:onClick="onClick"
                android:text="@string/str_btn_add"
                android:textSize="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_sign"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2">
            <Button
                android:layout_width="70dp"
                android:layout_height="173dp"
                android:onClick="onClick"
                android:text="@string/str_btn_equal"
                android:textSize="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/rounded_btn_sign"/>
        </GridLayout>
    </GridLayout>
</GridLayout>


